        android:allowBackup="true"
        android:icon="@mipmap/ic_books"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_books_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mdev.Bookstracker">
        <activity
            android:name="software.mdev.bookstracker.ui.bookslist.ListActivity"
            android:label="@string/app_name"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="software.mdev.bookstracker.ui.bookslist.AboutActivity"/>
    </application>

</manifest>