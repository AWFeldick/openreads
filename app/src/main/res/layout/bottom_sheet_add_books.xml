<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/ivSeparator"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="-8dp"
        android:scaleType="fitXY"
        android:clickable="false"
        app:tint="@color/colorDefaultText"
        android:contentDescription="@string/ivSeparator1"
        android:src="@drawable/ic_baseline_horizontal_rule_24" />

    <LinearLayout
        android:id="@+id/llAddManual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            app:tint="@color/colorDefaultText"
            android:src="@drawable/ic_iconscout_edit_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:singleLine="true"
            android:text="@string/btnAddManual"
            android:textColor="@color/colorDefaultText"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAddScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            app:tint="@color/colorDefaultText"
            android:src="@drawable/ic_baseline_document_scanner_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:singleLine="true"
            android:text="@string/btnAddScan"
            android:textColor="@color/colorDefaultText"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAddSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            app:tint="@color/colorDefaultText"
            android:src="@drawable/ic_baseline_search_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:singleLine="true"
            android:text="@string/btnAddSearch"
            android:textColor="@color/colorDefaultText"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>
