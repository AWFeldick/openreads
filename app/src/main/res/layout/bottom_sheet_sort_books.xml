<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="12dp">

    <ImageView
        android:id="@+id/ivSeparator"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-4dp"
        android:layout_marginBottom="-8dp"
        android:clickable="false"
        android:contentDescription="@string/ivSeparator1"
        android:scaleType="fitXY"
        android:src="@drawable/ic_iconscout_horizontal_line_24"
        app:tint="@color/colorDefaultText" />

    <LinearLayout
        android:id="@+id/llOrderBy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvOrderBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="14dp"
                android:padding="8dp"
                android:singleLine="true"
                android:text="@string/tvSorterTitle"
                android:textColor="@color/colorDefaultText"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvOrderAsc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="8dp"
                android:padding="8dp"
                android:singleLine="true"
                android:text="@string/ascending"
                android:textColor="@color/colorDefaultText"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tvOrderDesc" />

            <TextView
                android:id="@+id/tvOrderDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="14dp"
                android:padding="8dp"
                android:singleLine="true"
                android:text="@string/descending"
                android:textColor="@color/colorDefaultText"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSortByTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="0dp">

        <RadioButton
            android:id="@+id/rbSortByTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="12dp"
            android:text="@string/tvSortTitle"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSortByAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="0dp">

        <RadioButton
            android:id="@+id/rbSortByAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="12dp"
            android:text="@string/tvSortAuthor"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSortByRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="0dp">

        <RadioButton
            android:id="@+id/rbSortByRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="12dp"
            android:text="@string/tvSortRating"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSortByPages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="0dp">

        <RadioButton
            android:id="@+id/rbSortByPages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="12dp"
            android:text="@string/tvSortPages"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSortByStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="0dp">

        <RadioButton
            android:id="@+id/rbSortByStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="12dp"
            android:text="@string/tvSortStartDate"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSortFinishDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="0dp">

        <RadioButton
            android:id="@+id/rbSortByFinishDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="12dp"
            android:text="@string/tvSortFinishDate"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"
            android:padding="0dp"
            android:singleLine="true"
            android:text="@string/tvFilterTitle"
            android:textColor="@color/colorDefaultText"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFilterFavourite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="0dp">

        <CheckBox
            android:id="@+id/cbFilterFavourite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:padding="12dp"
            android:text="@string/only_fav"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFilterTagsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="14dp"
            android:padding="0dp"
            android:singleLine="true"
            android:text="Tags"
            android:textColor="@color/colorDefaultText"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFilterTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="0dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgFilterTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSortSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="4dp"
        android:paddingEnd="20dp"
        android:paddingBottom="4dp">

        <Button
            android:id="@+id/btnSortSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/btnAdderSaveBook"
            app:cornerRadius="@dimen/text_input_layout_radius" />
    </LinearLayout>


</LinearLayout>
