<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mdev.Bookstracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimarySurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">?colorPrimary</item>
        <item name="sortDialogBackgroundColor">@color/grey_dialog_night</item>
        <item name="android:navigationBarColor">?attr/colorPrimarySurface</item>
        <item name="actionBarStyle">@style/Custom.ActionBarStyle</item>
    </style>

    <style name="Custom.ActionBarStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="actionOverflowButtonStyle">@style/actionOverflowButtonStyle</item>
    </style>

    <color name="colorDefaultText">#FFFFFF</color>
    <color name="colorDefaultBg">#000000</color>
    <color name="colorGreyText">#9e9e9e</color>
    <color name="teal_bg">#00251a</color>
    <color name="cardViewBackgroundColor">@color/grey_800</color>
    <color name="textInputBackground">@color/grey_800</color>
</resources>